{
  "cli": {
    "version": ">= 0.38.0"
  },
  "build": {
    "production": {
      "android": {
        "buildType": "apk",
        "env": {
          "GOOGLE_SERVICES_JSON_BASE64": "$GOOGLE_SERVICES_JSON"
        },
        "prebuildCommand": "echo $GOOGLE_SERVICES_JSON_BASE64 | base64 --decode > android/app/google-services.json"
      }
    }
  }
}